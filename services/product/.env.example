# Server Configuration
PORT=8083
ENVIRONMENT=development

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=saan
DB_PASSWORD=saan_password
DB_NAME=saan_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300
DB_MIGRATIONS_PATH=file://migrations

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC_PRODUCT_CREATED=product.created
KAFKA_TOPIC_PRODUCT_UPDATED=product.updated
KAFKA_TOPIC_PRODUCT_DELETED=product.deleted
KAFKA_TOPIC_PRODUCT_SYNCED=product.synced
KAFKA_TOPIC_PRICE_CHANGED=price.changed
KAFKA_TOPIC_STOCK_CHANGED=stock.changed
KAFKA_TOPIC_INVENTORY_LOW=inventory.low
KAFKA_TOPIC_INVENTORY_ALERT=inventory.alert

# Cache Configuration (TTL in seconds)
CACHE_PRODUCT_TTL=3600
CACHE_PRICE_TTL=1800
CACHE_INVENTORY_TTL=300
CACHE_CATEGORY_TTL=7200
CACHE_SEARCH_TTL=600
CACHE_STATS_TTL=900

# External Service URLs
LOYVERSE_SERVICE_URL=http://loyverse:8100
LOYVERSE_API_KEY=your-loyverse-api-key-here
ORDER_SERVICE_URL=http://order:8081
INVENTORY_SERVICE_URL=http://inventory:8082
CUSTOMER_SERVICE_URL=http://customer:8084
LOCATION_SERVICE_URL=http://location:8085
NOTIFICATION_SERVICE_URL=http://notification:8086

# Security Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
INTERNAL_API_KEY=your-internal-api-key-change-this-in-production
RATE_LIMIT_RPM=1000
ALLOWED_ORIGINS=*
ENABLE_CORS=true
TRUSTED_PROXIES=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=

# Product Service Specific
PRODUCT_CACHE_TTL=3600
PRICING_CALCULATION_TIMEOUT=5
VIP_ACCESS_CACHE_TTL=1800
LOYVERSE_SYNC_INTERVAL=300
